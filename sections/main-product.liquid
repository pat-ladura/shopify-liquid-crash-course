<!-- Product Page Layout -->
<div class="product-page">
  <div class="product-image" style="width: unset;">
    <img src="{{ product.featured_image | image_url: width: 600 }}" alt="Product Image">
  </div>
  <div class="product-details">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'title' %}
          <h1 class="product-title">{{ product.title }}</h1>
        {% when 'description' %}
          <p class="product-description">
            {{ product.description | strip_html | truncate: 150, '...' }}
          </p>
        {% when 'price' %}
          <div class="product-price">{{ product.price | money }}</div>
        {% when 'add_to_cart' %}
          {% form 'product', product %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            <button type="submit" class="add-to-cart-btn">Add to Cart</button>
          {% endform %}
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Main Product",
  "tag": "section",
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "title",
      "name": "Title"
    },
    {
      "type": "description",
      "name": "Description"
    },
    {
      "type": "price",
      "name": "Price"
    },
    {
      "type": "add_to_cart",
      "name": "Add to Cart Button"
    }
  ],
  "presets": [
    {
      "name": "Main Product",
      "category": "General"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .product-page {
    display: flex;
    gap: 2.5rem;
    max-width: 1000px;
    margin: 2.5rem auto;
    align-items: flex-start;
    padding: 0 1rem;
  }

  .product-image img {
    width: 450px;
    height: 450px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .product-image img:hover {
    transform: scale(1.02);
  }

  .product-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .product-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1rem;
    letter-spacing: -0.025em;
    line-height: 1.2;
  }

  .product-price {
    font-size: 1.75rem;
    font-weight: 600;
    color: #059669;
    margin-bottom: 1.5rem;
  }

  .add-to-cart-btn {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: #fff;
    border: none;
    padding: 0.875rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 10px;
    cursor: pointer;
    margin-bottom: 1.5rem;
    transition: all 0.2s ease;
    letter-spacing: -0.01em;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
  }

  .add-to-cart-btn:hover {
    background: linear-gradient(135deg, #2563eb, #1e40af);
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.4);
  }

  .add-to-cart-btn:active {
    transform: translateY(0);
  }

  .product-description {
    color: #4b5563;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.6;
    margin-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .product-page {
      flex-direction: column;
      gap: 1.5rem;
      align-items: center;
      margin: 1.5rem auto;
    }

    .product-image img {
      width: 100%;
      max-width: 400px;
      height: auto;
    }

    .product-title {
      font-size: 1.875rem;
      text-align: center;
    }

    .product-price {
      text-align: center;
      font-size: 1.5rem;
    }

    .add-to-cart-btn {
      width: 100%;
      max-width: 300px;
    }

    .product-description {
      text-align: center;
    }
  }
{% endstylesheet %}
