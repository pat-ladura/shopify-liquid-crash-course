<div class="button-block">
    <a href="{{ block.settings.button_url | default: '#' }}" 
         class="custom-button"
         style="
             background-color: {{ block.settings.button_bg_color }};
             color: {{ block.settings.button_text_color }};
         ">
        {{ block.settings.button_text | default: 'Button' }}
    </a>
</div>

<style>
    .custom-button {
        display: inline-block;
        padding: 12px 24px;
        text-decoration: none;
        border-radius: 4px;
        font-weight: 500;
        text-align: center;
        transition: opacity 0.2s ease;
    }
    
    .custom-button:hover {
        opacity: 0.8;
    }
</style>

{% schema %}
{
    "name": "Button",
    "tag": "div",
    "class": "button-block",
    "settings": [
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Click Me"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button Link"
        },
        {
            "type": "color",
            "id": "button_bg_color",
            "label": "Button Background Color",
            "default": "#000000"
        },
        {
            "type": "color",
            "id": "button_text_color",
            "label": "Button Text Color",
            "default": "#ffffff"
        }
    ],
    "presets": [
        {
            "name": "Button"
        }
    ]
}
{% endschema %}