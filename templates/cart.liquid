<div class="cart-container">
    <div class="cart-header">
        <h1>{{ 'cart.title' | t }}</h1>
        {% if cart.item_count == 0 %}
            <p class="empty-cart-message">{{ 'cart.empty' | t }}</p>
            <a href="{{ routes.all_products_collection_url }}" class="continue-shopping-btn">Continue Shopping</a>
        {% endif %}
    </div>

    {% if cart.item_count > 0 %}
        <div class="cart-items">
            {% for item in cart.items %}
                <div class="cart-item">
                    <div class="item-image">
                        <img src="{{ item.image | img_url: '150x150' }}" alt="{{ item.title }}">
                    </div>
                    
                    <div class="item-details">
                        <h3 class="item-title">{{ item.product.title }}</h3>
                        {% if item.variant.title != 'Default Title' %}
                            <p class="item-variant">{{ item.variant.title }}</p>
                        {% endif %}
                        <p class="item-price">{{ item.price | money }}</p>
                    </div>
                    
                    <div class="item-quantity">
                        <label for="quantity-{{ item.key }}">Quantity:</label>
                        <p>{{ item.quantity }}</p>
                    </div>
                    
                    <div class="item-total">
                        <p class="line-total">{{ item.line_price | money }}</p>
                    </div>
                    
                    <div class="item-remove">
                        <a href="{{ item.url_to_remove }}" class="remove-btn">Remove</a>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="cart-footer">
            <div class="cart-totals">
                <div class="subtotal">
                    <span>Subtotal: {{ cart.total_price | money }}</span>
                </div>
                
                <div class="cart-actions">
                    <button type="submit" name="update" class="update-cart-btn">Update Cart</button>
                    <button type="submit" name="add" class="checkout-btn" 
                                    onclick="window.location.href='/checkout'">
                        Proceed to Checkout
                    </button>
                </div>
            </div>
        </div>
    {% endif %}
</div>

